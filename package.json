{
  "name": "kore",
  "private": true,
  "version": "1.0.0",
  "author": "Andr√© 'Dezzy' <@andredezzy>",
  "license": "MIT",
  "engines": {
    "node": ">= 12.16.x",
    "yarn": ">= 1.22.x",
    "npm": ">= 6.14.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GlarosConsulting/lafe.git"
  },
  "bugs": {
    "url": "https://github.com/GlarosConsulting/lafe/issues"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/typeorm/**",
      "**/typeorm"
    ]
  },
  "scripts": {
    "lint": "eslint packages --ext ts,tsx",
    "lint:fix": "yarn lint --fix",
    "test": "lerna run test --scope @lafe/* --stream --parallel -- --watchAll false",
    "server": "yarn workspace @lafe/server",
    "web": "yarn workspace @lafe/web"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "git add",
      "yarn test --bail --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "@commitlint/travis-cli": "^7.6.1",
    "@types/jest": "^24.0.11",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "commitlint-config-rocketseat": "^0.0.1",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-import-helpers": "^0.1.4",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.5",
    "husky": "^4.2.5",
    "jest": "^24.7.1",
    "jest-dom": "^3.2.2",
    "lerna": "^3.22.1",
    "lint-staged": "^8.1.5",
    "prettier": "^2.0.5",
    "ts-jest": "^24.0.2",
    "typescript": "^3.7.4"
  },
  "dependencies": {}
}
